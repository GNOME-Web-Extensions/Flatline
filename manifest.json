{

  "manifest_version": 2,
  "name": "Flatline",
  "version": "1.2",

  "description": "Open apps directly in GNOME Software by clicking Install from Flathub and apps.gnome.",

  "icons": {
    "48": "icons/flatline-48.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://flathub.org/apps/details/*",
        "https://beta.flathub.org/*",
        "https://apps.gnome.org/app/*"
      ],
      "js": ["main.js"]
    }
  ]

}

